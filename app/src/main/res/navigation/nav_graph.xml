<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.sopt.now.ui.login.LoginFragment"
        android:label="LoginFragment">
        <action
            android:id="@+id/action_login_to_signup"
            app:destination="@id/signupFragment" />
        <action
            android:id="@+id/action_login_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/signupFragment"
        android:name="com.sopt.now.ui.signup.SignupFragment"
        android:label="SignupFragment">
        <action
            android:id="@+id/action_signup_to_login"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/mypageFragment"
        android:name="com.sopt.now.ui.mypage.MypageFragment"
        android:label="MypageFragment">
        <action
            android:id="@+id/action_mypage_to_login"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_mypage_to_chPassword"
            app:destination="@id/chPasswordFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.sopt.now.ui.home.HomeFragment"
        android:label="HomeFragment" />

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.sopt.now.ui.search.SearchFragment"
        android:label="SearchFragment" />
    <fragment
        android:id="@+id/chPasswordFragment"
        android:name="com.sopt.now.ui.ch_password.ChPasswordFragment"
        android:label="ChPasswordFragment" >
        <action
            android:id="@+id/action_chPassword_to_login"
            app:destination="@id/loginFragment" />
    </fragment>

</navigation>