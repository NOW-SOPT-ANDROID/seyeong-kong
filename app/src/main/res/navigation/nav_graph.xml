<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.sopt.now.ui.LoginFragment"
        android:label="LoginFragment">
        <action
            android:id="@+id/action_login_to_signup"
            app:destination="@id/signupFragment" />
        <action
            android:id="@+id/action_login_to_home"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/signupFragment"
        android:name="com.sopt.now.ui.SignupFragment"
        android:label="SignupFragment">
        <action
            android:id="@+id/action_signup_to_login"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/mypageFragment"
        android:name="com.sopt.now.ui.MypageFragment"
        android:label="MypageFragment">
        <action
            android:id="@+id/action_mypage_to_login"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.sopt.now.ui.HomeFragment"
        android:label="HomeFragment" />

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.sopt.now.ui.SearchFragment"
        android:label="SearchFragment" />

</navigation>